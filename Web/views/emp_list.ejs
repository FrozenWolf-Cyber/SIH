

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<link rel="stylesheet" href="/css/emp_list.css">

<main>
    <h1 id="page-heading"></h1>
    <div id="search">
        <div id="search-bar-container"> 
            <span class="material-symbols-outlined">search</span>
            <input type="text" id = 'search-bar' name='emp_name' placeholder="Employee name...">
        </div>
        <div id="adv-search">
            <select name="emp_designation">
                <option value="">Designation</option>
            </select>
            <div id="gender">
                 <label for="male">Male</label>
                 <input type="radio" id="male" value="m" name="gender">
                 <label for="female">Female</label>
                 <input type="radio" id="female" value="f" name="gender"> 
            </div>
            <input type="number" name="emp_no">
        </div>
    </div>
    <div id = 'emp-list'>
    </div>
</main>


<script src="/js/emp_list.js"></script>
<script src="/js/fill_search_bar.js"></script>
<script src="/js/search_emp.js"></script>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.totalrecon.ipravesh">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:remove="android:maxSdkVersion"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ip_logo_ic"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ip_logo_ic"
        android:supportsRtl="true"
        android:theme="@style/Theme.FaceRecognition">

        <activity
            android:name=".Splashscreen"
            android:exported="true"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".logs"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".Alerts"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="sensorPortrait"></activity>
        <activity
            android:name=".geoActivity"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".employee_dashboard"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".cameraActivity"

            android:exported="true"

            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".otp_verification"
            android:screenOrientation="sensorPortrait"
            android:exported="true" />
        <activity
            android:name=".register_new_employee_cred"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".uploadsigninActivity"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".threeshot"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".register"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".check_status"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />

        <activity
            android:name=".CameraLiveActivity"
            android:exported="false"
            />
    </application>
    <uses-permission android:name="android.permission.CAMERA" />
</manifest>